<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= t('control_panel.captions.product_edit') %>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to t('control_panel.captions.product_all'), admin_products_path %>
    </li>
    <li class="active">
      <%= link_to @product.id, edit_admin_product_path(@product) %>
    </li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <% unless flash.empty? %>
    <div class="row">
      <div class="col-xs-12">
        <%= render partial: 'layouts/flash_messages', flash: flash %>
      </div>
    </div>
  <% end %>
  <%= render partial: 'admin/products/product_form' %>
</section><!-- /.content -->