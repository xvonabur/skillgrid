<h1 class="page-header">Список продуктов</h1>
<div class="row">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-12">
        <%= link_to(new_admin_product_path, class: 'btn btn-primary pull-right',
                                            id: 'new_product') do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          Новый продукт
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table id="admin-products-table"
               class="table table-striped table-bordered">
          <thead>
          <tr role="row">
            <th>Дата добавления</th>
            <th>Заголовок</th>
            <th>Описание</th>
            <th>Удалить</th>
          </tr>
          </thead>
          <tbody>
          <% if @products.blank? %>
            <tr>
              <td colspan="4">Нет данных</td>
            </tr>
          <% else %>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.created_at %></td>
                <td><%= product.title %></td>
                <td><%= product.description %></td>
                <td>
                  <%= link_to 'Удалить', { action: 'destroy',
                                           id: product.id },
                                         method: :delete,
                                         id: "product_#{product.id}_del" %>
                </td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>