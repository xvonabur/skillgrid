<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Все продукты
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Главная</a></li>
    <li class="active"><a href="#">Все продукты</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <% unless flash.empty? %>
    <div class="row">
      <div class="col-xs-12">
        <%= render partial: 'layouts/flash_messages', flash: flash %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Список продуктов</h3>
        </div>
        <div class="box-body">
          <div class="row">
            <div class="col-sm-12">
              <div class="row">
                <div class="col-sm-12">
                  <table id="admin-products-table"
                         class="table table-striped table-bordered">
                    <thead>
                    <tr role="row">
                      <th>Заголовок</th>
                      <th>Описание</th>
                      <th>Фото</th>
                      <th>Дата изменения</th>
                      <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if @products.blank? %>
                      <tr>
                        <td colspan="5">Нет данных</td>
                      </tr>
                    <% else %>
                      <% @products.each do |product| %>
                        <tr>
                          <td><%= product.title %></td>
                          <td><%= product.description %></td>

                          <td>
                            <% if product.photo.present? && product.photo.image_stored? %>
                              <%= link_to 'Показать', product.photo.image.url, target: '_blank' %>
                            <% else %>
                              Нет
                            <% end %>
                          </td>
                          <td><%= I18n.l(product.updated_at, format: :long) %></td>
                          <td>
                            <span>
                              <%= link_to(edit_admin_product_path(product.id),
                                          class: 'btn btn-default',
                                          id: "product_#{product.id}_edit") do %>
                                    <i class="fa fa-edit"></i>
                                  <% end %>
                            </span>
                            <span>
                              <%= link_to({ action: 'destroy',
                                            id: product.id },
                                          method: :delete,
                                          class: 'btn btn-default',
                                          id: "product_#{product.id}_del") do %>
                                    <i class="fa fa-trash"></i>
                                  <% end %>
                            </span>
                          </td>
                        </tr>
                      <% end %>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>

        </div><!-- /.box-body -->
      </div>
    </div>
  </div>
</section><!-- /.content -->