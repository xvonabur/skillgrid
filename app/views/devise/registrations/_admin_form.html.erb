<p class="login-box-msg">
  <%= t('devise.registrations.new.admin_sign_up') %>
</p>
<%= simple_form_for(resource, as: resource_name,
                    url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :admin, as: :hidden %>
  <%= f.input :name,  autofocus: true,
              class: 'form-control', required: true  %>
  <%= f.input :last_name,  autofocus: true,
              class: 'form-control', required: true %>
  <%= f.input :birthday, as: :string, required: true %>
  <%= f.input :email, required: true,
              class: 'form-control' %>
  <%= f.input :password,  required: true,
              class: 'form-control' %>
  <%= f.input :password_confirmation,  required: true,
              class: 'form-control' %>
  <%= f.simple_fields_for :avatar, resource.build_avatar do |ph| %>
    <%= ph.input :image, as: :file, required: true %>
  <% end %>
  <%= f.simple_fields_for :passport, resource.build_passport do |pass| %>
    <%= pass.input :image, as: :file, required: true %>
  <% end %>
  <div class="row">
    <div class="col-xs-5 col-xs-offset-7">
      <%= f.submit t('.sign_up'),
                   class: 'btn btn-primary btn-block btn-flat',
                   id: 'sign_up_submit_btn' %>
    </div><!-- /.col -->
  </div><!-- /.row -->

<% end %>