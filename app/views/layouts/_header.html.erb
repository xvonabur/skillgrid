<header class="main-header">
  <nav class="navbar navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="
        <% if !!current_user %>
          <%= admin_products_path %>
        <% else %>
          <%= products_path %>
        <% end %>">➚#</a>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
          <i class="fa fa-bars"></i>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="<%= 'active' if current_page?(products_path) %>">
            <%= link_to 'Продукты', products_path %>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
      <!-- Navbar Right Menu -->
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="<%= 'active' if current_page?(new_user_registration_path) %>">
            <%= link_to 'Регистрация', new_user_registration_path, id: 'user-sign-up-link' %>
          </li>
          <li class="<%= 'active' if current_page?(new_user_session_path) %>">
            <%= link_to 'Вход', new_user_session_path, id: 'user-sign-in-link' %>
          </li>
        </ul>
      </div>
      <!-- /.navbar-custom-menu -->
    </div>
    <!-- /.container-fluid -->
  </nav>
</header>