<div class="wrapper">
  <%= render partial: 'layouts/header' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <div class="container">
      <!-- Main content -->
      <section class="content">
        <% unless flash.empty? %>
          <div class="row">
            <div class="col-xs-12">
              <%= render partial: 'layouts/flash_messages', flash: flash %>
            </div>
          </div>
        <% end %>
        <%= yield %>
      </section>
    </div><!-- /.content -->
  </div><!-- /.content-wrapper -->

  <%= render partial: 'layouts/footer' %>
</div><!-- /.wrapper -->
