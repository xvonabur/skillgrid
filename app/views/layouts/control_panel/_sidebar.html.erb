<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar" style="height: auto;">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag 'users/default_userpic.png',
                      class: 'img-circle',
                      alt: 'User Image'  %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="#">
          <i class="fa fa-circle text-success"></i>

        </a>
      </div>
    </div>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
      <li class="header">
        <%= t('control_panel.sidebar.menu.header').mb_chars.upcase!.to_s %>
      </li>
      <li class="treeview
        <%= 'active' if current_page?(admin_products_path) ||
                        current_page?(new_admin_product_path) ||
                        (controller.controller_name == 'admin/products' &&
                         controller.action_name == 'create')  %>">
        <a href="<%= admin_products_path %>">
          <i class="fa fa-file-text-o"></i>
          <span><%= t('control_panel.sidebar.menu.titles.products') %></span>
          <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu" id="sidebar-products-menu">
          <li class="<%= 'active' if current_page?(new_admin_product_path) ||
            (controller.controller_name == 'admin/products' &&
              controller.action_name == 'create')  %>">
            <a href="<%= new_admin_product_path %>" id="new_product">
              <i class="fa fa-plus"></i>
              <span>
                <%= t('control_panel.sidebar.menu.titles.add_product') %>
              </span>
            </a>
          </li>
          <li class="<%= 'active' if current_page?(admin_products_path) %>">
            <a href="<%= admin_products_path %>">
              <i class="fa fa-newspaper-o"></i>
              <span>
                <%= t('control_panel.sidebar.menu.titles.all_products') %>
              </span>
            </a>
          </li>
        </ul>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>